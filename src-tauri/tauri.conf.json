{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FFmpeg GUI Tool",
  "version": "0.2.0",
  "identifier": "com.wsgsety.ffmpeggui",
  "build": {
    "frontendDist": "../src/renderer"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "FFmpeg 图形工具",
        "width": 1180,
        "height": 880,
        "minWidth": 960,
        "minHeight": 720,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "public.app-category.video",
    "createUpdaterArtifacts": false,
    "shortDescription": "FFmpeg 可视化转码工具",
    "longDescription": "提供基础流程和模块化高级参数的跨平台 FFmpeg 桌面图形工具。",
    "copyright": "Copyright (c) WSGsety"
  }
}
